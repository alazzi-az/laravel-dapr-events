{
    "name": "alazziaz/laravel-dapr-events",
    "description": "Laravel-friendly tooling for publishing and consuming events over Dapr Pub/Sub.",
    "keywords": [
        "laravel",
        "dapr",
        "pubsub",
        "events",
        "publisher",
        "listener"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "dapr/php-sdk": "dev-main",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/container": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0"
    },
    "replace": {
        "alazziaz/laravel-dapr-foundation": "self.version",
        "alazziaz/laravel-dapr-publisher": "self.version",
        "alazziaz/laravel-dapr-listener": "self.version"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "AlazziAz\\DaprEvents\\": "src/Foundation/src/",
            "AlazziAz\\DaprEventsPublisher\\": "src/Publisher/src/",
            "AlazziAz\\DaprEventsListener\\": "src/Listener/src/"
        },
        "files": [
            "src/Publisher/src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AlazziAz\\DaprEvents\\Tests\\": "src/Foundation/tests/",
            "AlazziAz\\DaprEventsPublisher\\Tests\\": "src/Publisher/tests/",
            "AlazziAz\\DaprEventsListener\\Tests\\": "src/Listener/tests/"
        }
    },
    "scripts": {
        "test": [
            "cd src/Foundation && composer test",
            "cd src/Publisher && composer test",
            "cd src/Listener && composer test"
        ],
        "analyse": "phpstan analyse"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AlazziAz\\DaprEvents\\ServiceProvider",
                "AlazziAz\\DaprEventsPublisher\\ServiceProvider",
                "AlazziAz\\DaprEventsListener\\ServiceProvider"
            ]
        }
    },
    "suggest": {
        "ext-pcntl": "Required to run listener workers efficiently."
    },
    "repositories": {
        "dapr-php-sdk": {
            "type": "vcs",
            "url": "https://github.com/dapr/php-sdk"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
